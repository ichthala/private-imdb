<h1><%= @movie.title %></h1>

<%= image_tag(@movie.poster, width: 500) %>

<% if defined? @movie.my_rating %>
  <h2>Your rating: <%= @movie.my_rating %></h2>
<% end %>

<p>Released <%= @movie.year %> | Rated <%= @movie.mpaa_rating %></p>
<p><%= @movie.plot %></p>

<form action="/movies" method="post">
  <input type="hidden" name="id" value="<%= @movie.id %>">
  <button>Save</button>
</form>

<form action="/movies/favorite" method="post">
  <button>Save & Favorite</button>
</form>